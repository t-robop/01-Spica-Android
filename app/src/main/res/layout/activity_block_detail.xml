<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UI.Script.BlockDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="200dp"
        android:layout_marginVertical="100dp"
        android:background="@drawable/select_shape_white"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:paddingVertical="16dp">

            <ImageView
                android:id="@+id/block_image"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/front"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/block_title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="ススム"
                android:textAppearance="@style/TextAppearance.block_title_b" />

            <TextView
                android:id="@+id/block_des_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="ススム"
                android:textAppearance="@style/TextAppearance.block_title_b" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:hint="1.0 (s)"
                android:focusable="false"
                android:textAppearance="@style/TextAppearance.block_title_b" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/block_script_item"
                    android:text="キャンセル"
                    android:textAppearance="@style/TextAppearance.block_title_b" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/block_script_item"
                    android:text="決定"
                    android:textAppearance="@style/TextAppearance.block_title_b" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>