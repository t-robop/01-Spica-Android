<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UI.Script.BlockDetailActivity">

    <data>
        <variable name="fragment" type="com.t_robop.yuusuke.a01_spica_android.UI.Script.BlockDetailFragment" />
    </data>

    <RelativeLayout
        android:id="@+id/bg_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="@{()->fragment.close()}"
        android:background="#00000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="200dp"
            android:layout_marginVertical="100dp"
            android:background="@drawable/select_shape_white"
            android:orientation="horizontal">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="2"
                android:paddingVertical="16dp">

                <ImageView
                    android:id="@+id/block_image"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_block_front"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/block_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="ススム"
                    android:textAppearance="@style/TextAppearance.block_title_b" />

                <TextView
                    android:id="@+id/block_des_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="ススム"
                    android:textAppearance="@style/TextAppearance.block_title_b" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/switch_container_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="逆回転"
                        android:textAppearance="@style/TextAppearance.block_des_b"
                        app:layout_constraintRight_toLeftOf="@+id/switch_detail"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <Switch
                        android:id="@+id/switch_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:onCheckedChanged="@{()->fragment.onCheckedChanged()}"
                        app:layout_constraintRight_toRightOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <SeekBar
                    android:id="@+id/seek_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="2"
                    android:progress="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/detail_cancel_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/block_script_item"
                        android:text="キャンセル"
                        android:textAppearance="@style/TextAppearance.block_title_b"
                        android:onClick="@{()->fragment.close()}"/>

                    <Button
                        android:id="@+id/detail_add_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/block_script_item"
                        android:text="決定"
                        android:onClick="@{()->fragment.confirm()}"
                        android:textAppearance="@style/TextAppearance.block_title_b" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>