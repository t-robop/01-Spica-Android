<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="script_if"
            type="com.t_robop.yuusuke.a01_spica_android.model.ScriptModel"></variable>

        <variable
            name="script"
            type="com.t_robop.yuusuke.a01_spica_android.model.ScriptModel"></variable>
    </data>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="280dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="@{script_if==null ? View.INVISIBLE:View.VISIBLE}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                android:background="@drawable/block_script_item"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/block_image_if"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_text_if"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@drawable/block_script_item"
                        android:gravity="center"
                        android:text="@{String.valueOf(script_if.block.blockId)}"
                        tools:text="ススム" />

                    <TextView
                        android:id="@+id/id_text_if"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="@{String.valueOf(script_if.block.blockId)}"
                        tools:text="0.5 s" />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/conductor_if"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/conductor_script_item">

                <LinearLayout
                    android:id="@+id/conductor_add_if"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/block_script_item"
                    android:transitionName="trans_block_list">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+"
                        android:textAppearance="@style/TextAppearance.block_title_b" />

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="@{script==null ? View.INVISIBLE:View.VISIBLE}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                android:background="@drawable/block_script_item"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/block_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@drawable/block_script_item"
                        android:gravity="center"
                        android:text="@{String.valueOf(script.block.blockId)}"
                        tools:text="ススム" />

                    <TextView
                        android:id="@+id/id_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="@{String.valueOf(script.block.blockId)}"
                        tools:text="0.5 s" />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/conductor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/conductor_script_item">

                <LinearLayout
                    android:id="@+id/conductor_add"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/block_script_item"
                    android:transitionName="trans_block_list">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+"
                        android:textAppearance="@style/TextAppearance.block_title_b" />

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</layout>